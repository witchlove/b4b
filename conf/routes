# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

# Order
GET     /orders                   	controllers.OrderController.form
GET     /orders/:orderId		    controllers.OrderController.editForm(orderId : Long)
POST    /orders                   	controllers.OrderController.submit

#SalesPerson
GET		/salespersons				controllers.SalesPersonController.list
GET		/salespersons/new			controllers.SalesPersonController.create
POST	/salespersons				controllers.SalesPersonController.save

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
